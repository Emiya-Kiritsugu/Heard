<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/bullet_gap_width"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_setting_cache_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_setting_cache_icon"
                    android:layout_width="36dip"
                    android:layout_height="36dip"
                    android:layout_gravity="start|center_vertical"
                    android:layout_margin="@dimen/bullet_gap_width"
                    android:src="@drawable/ic_cache_gray" />

                <TextView
                    android:id="@+id/tv_setting_cache_tip"
                    style="?android:textAppearanceSmall"
                    android:layout_width="0dip"
                    android:layout_height="36dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/bullet_gap_width"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:text="CACHE" />

                <TextView
                    android:id="@+id/tv_setting_cache_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/bullet_gap_width"
                    android:text="0KB" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="@dimen/bullet_gap_width"
                android:background="@drawable/ic_divider_dots_vertical"
                android:visibility="visible"></View>

            <LinearLayout
                android:id="@+id/ll_setting_about_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_setting_about_icon"
                    android:layout_width="36dip"
                    android:layout_height="36dip"
                    android:layout_gravity="start|center_vertical"
                    android:layout_margin="@dimen/bullet_gap_width"
                    android:src="@drawable/ic_about_gray" />

                <TextView
                    android:id="@+id/tv_setting_about_tip"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="36dip"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/bullet_gap_width"
                    android:gravity="start|center_vertical"
                    android:text="ABOUT" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_margin="@dimen/bullet_gap_width"
                android:background="@drawable/ic_divider_dots_vertical"
                android:visibility="visible"></View>


            <TextView
                android:id="@+id/tv_setting_login_tip"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="52dip"
                android:layout_gravity="center"
                android:background="@drawable/background_tag_selector"
                android:gravity="center"
                android:text="EXIT"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <include layout="@layout/common_loading"></include>
    </FrameLayout>
</ScrollView>