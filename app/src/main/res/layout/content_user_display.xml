<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDefault"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activities.UserDisplayActivity"
    tools:showIn="@layout/activity_user_display">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_user_display_cover"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/nav_header_height"
                        android:src="@drawable/ic_picture_default" />

                    <ImageView
                        android:id="@+id/iv_user_display_avatar"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_default_avatar" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_user_display_displayname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="displayname"
                    android:textColor="@color/colorSecondaryText" />

                <TextView
                    android:id="@+id/tv_user_display_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="nickname"
                    android:textColor="@color/colorHintText" />

                <TextView
                    android:id="@+id/tv_user_display_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="signature"
                    android:textColor="@color/colorHintText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user_display_followee_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56dip"
                        android:textColor="@color/colorHintText"
                        android:gravity="center"
                        android:minWidth="80dip"
                        android:padding="@dimen/bullet_gap_width"
                        android:text="Followee" />

                    <TextView
                        android:id="@+id/tv_user_display_followee_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_user_display_followee_tip"
                        android:gravity="center"
                        android:textColor="@color/colorHintText"
                        android:padding="@dimen/bullet_gap_width"
                        android:text="1" />

                    <TextView
                        android:id="@+id/tv_user_display_follower_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/tv_user_display_follower_count"
                        android:gravity="center"
                        android:minWidth="80dip"
                        android:padding="@dimen/bullet_gap_width"
                        android:text="Follower"
                        android:textColor="@color/colorHintText" />

                    <TextView
                        android:id="@+id/tv_user_display_follower_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="56dip"
                        android:gravity="center"
                        android:textColor="@color/colorHintText"
                        android:padding="@dimen/bullet_gap_width"
                        android:text="21" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_user_display_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="56dip"
                        android:background="@drawable/tag_background"
                        android:gravity="center"
                        android:minWidth="80dip"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/bullet_gap_width"
                        android:text="Chat" />

                    <TextView
                        android:id="@+id/tv_user_display_follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="56dip"
                        android:background="@drawable/tag_background_accent"
                        android:gravity="center"
                        android:minWidth="80dip"
                        android:textColor="@color/colorWhite"
                        android:padding="@dimen/bullet_gap_width"
                        android:text="Follow" />
                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user_display_post_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="23"
                android:textColor="@color/colorSecondaryText"/>
            <TextView
                android:id="@+id/tv_user_display_post_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_user_display_post_count"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:text="Posts"
                android:textColor="@color/colorSecondaryText"/>
            <ImageView
                android:id="@+id/tv_user_display_post_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_dots_horizontal"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        </RelativeLayout>
        <com.way.heard.ui.views.BaseListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.way.heard.ui.views.BaseListView>
    </LinearLayout>
</ScrollView>
