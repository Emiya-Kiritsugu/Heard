<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_article_item_avatar"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_margin="8dip"
            android:src="@drawable/ic_picture_default" />

        <TextView
            android:id="@+id/tv_article_item_nickname"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:layout_toRightOf="@+id/iv_article_item_avatar"
            android:text="Nickname"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/tv_article_item_createat"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_article_item_nickname"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/iv_article_item_avatar"
            android:text="Signature" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_article_item_title"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="16dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Title"
        android:textColor="@color/colorPrimaryText" />

    <com.way.heard.ui.views.NineGridImageView
        android:id="@+id/ngiv_article_item_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:imgGap="4dp"
        app:maxSize="9"
        app:showStyle="fill"
        app:singleImgSize="120dp">

    </com.way.heard.ui.views.NineGridImageView>

    <com.way.heard.ui.views.TagCloudView
        android:id="@+id/tcv_article_item_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="16dip"
        android:visibility="gone"
        app:tcvBorder="8dp"
        app:tcvCanTagClick="true"
        app:tcvItemBorderHorizontal="8dp"
        app:tcvItemBorderVertical="6dp"
        app:tcvShowRightImg="false"
        app:tcvSingleLine="true"
        app:tcvTextColor="#123455">

    </com.way.heard.ui.views.TagCloudView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_article_item_loves_button"
            style="?android:textAppearanceSmall"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:src="@drawable/ic_thumb_up" />

        <TextView
            android:id="@+id/tv_article_item_loves_count"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:layout_toEndOf="@+id/tv_article_item_loves_button"
            android:gravity="start|center_vertical"
            android:text="0" />

        <ImageView
            android:id="@+id/tv_article_item_comments_button"
            style="?android:textAppearanceSmall"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:layout_toEndOf="@+id/tv_article_item_loves_count"
            android:src="@drawable/ic_comment_gray" />

        <TextView
            android:id="@+id/tv_article_item_comments_count"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:layout_toEndOf="@+id/tv_article_item_comments_button"
            android:gravity="start|center_vertical"
            android:text="0" />
    </RelativeLayout>
</LinearLayout>
