<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_contact_item_avatar"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="8dip"
        android:src="@drawable/ic_picture_default" />

    <TextView
        android:id="@+id/tv_contact_item_nickname"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@+id/iv_contact_item_avatar"
        android:text="Nickname"
        android:textColor="@color/colorPrimaryText" />

    <TextView
        android:id="@+id/tv_contact_item_createat"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_contact_item_nickname"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@+id/iv_contact_item_avatar"
        android:text="Signature" />
</RelativeLayout>
